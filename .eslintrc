{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/warnings"],

  "plugins": ["react", "import"],

  "parserOptions": {
    "ecmaVersion": 2017,

    "sourceType": "module",

    "ecmaFeatures": {
      "jsx": true
    }
  },

  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-console": 2,
    "import/order": 2,
    "import/no-unresolved": 2,
    "react/prop-types": 2,
    "react/default-props-match-prop-types": 2
  },
  "env": {
    "es6": true,
    "browser": true
  }
}
